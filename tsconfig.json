{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@images/header/*": [
        "src/images/header/*"
      ],
      "@images/landing/*": [
        "src/images/landing/*"
      ],
      "@images/solutions/*": [
        "src/images/pillar-solutions/*"
      ],
      "@images/media/*": [
        "src/images/media/*"
      ],
      "@images/sgid/*": [
        "src/images/product-sgid/*"
      ],
      "@images/discover/*": [
        "src/images/product-discover/*"
      ],
      "@images/turn/*": [
        "src/images/product-turn/*"
      ],
      "@images/api/*": [
        "src/images/product-api/*"
      ],
      "@images/about/*": [
        "src/images/pillar-about/*"
      ],
      "@images/blog/*": [
        "src/images/pillar-blog/*"
      ],
      "@images/contact/*": [
        "src/images/pillar-contact/*"
      ],
      "@images/collaboration/*": [
        "src/images/pillar-collaboration/*"
      ],
      "@images/documentation/*": [
        "src/images/pillar-documentation/*"
      ],
      "@images/footer/*": [
        "src/images/footer/*"
      ],
      "@utils/*": [
        "src/utilities/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@models/*": [
        "src/pages/*"
      ],
      "@partials/*": [
        "src/pages/_partials/*"
      ],
      "@downloads/*": [
        "src/downloads/*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "src/migrations",
    "src/scripts",
    "src/data/downloadMetadata.ts"
  ]
}
