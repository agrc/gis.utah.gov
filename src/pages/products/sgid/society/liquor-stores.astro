---
import Layout from '@layouts/DataPage.astro';

import type { IMetadata, IPageMetadata } from '@models/products/sgid/types';
import { ProductType, SgidCategory } from '@models/products/sgid/types';

import HubDownloads from '@components/data/HubDownloads.astro';
import Metadata from '@components/data/Metadata.astro';

import CardWithPopularLink from '@components/page/CardWithPopularLink.astro';
import CardWithSmallLink from '@components/page/CardWithSmallLink.astro';
import GridForMoreResources from '@components/page/GridForMoreResources.astro';
import GridForYouMightLike from '@components/page/GridForYouMightLike.astro';
import Section from '@components/page/Section.astro';

import UpdateHistory from '@components/data/UpdateHistory.astro';
import { dataPages } from '@data/downloadMetadata';

export const metadata: IMetadata = {
  title: 'Utah Liquor Stores',
  description: `Liquor stores contains information and locations for liquor stores and package agencies controlled by the Department of Alcoholic Beverage Services of Utah.`,
  stewards: ['UGRC', 'DABS'],
  type: ProductType.POINT,
  category: SgidCategory.SOCIETY,
};

const page: IPageMetadata = {
  ...metadata,
  application: 'https://abs.utah.gov/shop-products/find-store/',
  updateHistory: [`August 2023`, `March 2017`],

  hub: {
    ...dataPages[metadata.title],
  },
};
---

<Layout title={page.title} subTitle={page.updateHistory[0]} category={page.category} actionUrl={page.application}>
  <Metadata slot="metadata" {...page} />

  <Fragment slot="summary">
    <p>
      Liquor stores contains information and locations for liquor stores and package agencies controlled by the
      Department of Alcoholic Beverage Services of Utah. These locations were originally geocoded from DABS store
      addresses and are now being updated as locations are added, moved, or closed.
    </p>
  </Fragment>

  <Section title="Use the data" slot="downloads" titlePosition="center">
    <HubDownloads {...page.hub} />
  </Section>

  <UpdateHistory slot="update-history" updates={page.updateHistory} style="secondary" />

  <Section title="More resources" slot="more-resources" titlePosition="center">
    <GridForMoreResources>
      <CardWithPopularLink title="DABS" href="https://abs.utah.gov/"
        >Department of Alcoholic Beverage Services website.</CardWithPopularLink
      >
      <CardWithPopularLink title="Visit Utah" href="/products/sgid/address/"
        >Get up to speed on Utah liquor laws.</CardWithPopularLink
      >
    </GridForMoreResources>
  </Section>

  <Section title="You might also like" slot="you-might-also-like" stripe titlePosition="center">
    <GridForYouMightLike>
      <CardWithSmallLink title="Golf courses" href="/products/sgid/recreation/golf-courses" style="secondary"
        >Explore Utah golf course locations.</CardWithSmallLink
      >
      <CardWithSmallLink
        title="Health care facilities"
        href="/products/sgid/health/healthcare-facilities/"
        style="secondary">Hospitals and other health care locations.</CardWithSmallLink
      >
      <CardWithSmallLink
        title="Law enforcement"
        href="/products/sgid/society/law-enforcement-facilities/"
        style="secondary">Law enforcement office locations.</CardWithSmallLink
      >
      <CardWithSmallLink title="Ski areas" href="/products/sgid/recreation/ski-areas/" style="secondary"
        >Ski area locations.</CardWithSmallLink
      >
    </GridForYouMightLike>
  </Section>
</Layout>
