---
import Layout from '@layouts/DataPage.astro';

import type { IMetadata, IPageMetadata } from '@models/products/sgid/types';
import { ProductType, SgidCategory } from '@models/products/sgid/types';

import HubDownloads from '@components/data/HubDownloads.astro';
import Metadata from '@components/data/Metadata.astro';
import UpdateHistory from '@components/data/UpdateHistory.astro';

import CardWithPopularLink from '@components/page/CardWithPopularLink.astro';
import CardWithSmallLink from '@components/page/CardWithSmallLink.astro';
import GridForMoreResources from '@components/page/GridForMoreResources.astro';
import GridForYouMightLike from '@components/page/GridForYouMightLike.astro';
import Section from '@components/page/Section.astro';

import { dataPages } from '@data/downloadMetadata';

export const metadata: IMetadata = {
  title: 'Utah Judicial Districts',
  description: `This dataset represents the State Judicial Districts as designated by their political boundaries. District, Juvenile and Justice courts are located in each of the state's eight judicial districts.`,
  stewards: ['UGRC', 'these', 'are', 'combined'],
  type: ProductType.POLYGON,
  category: SgidCategory.POLITICAL,
};

const page: IPageMetadata = {
  ...metadata,
  updateHistory: [
    `2005`,
  ],
  hub: {
    ...dataPages[metadata.title],
  },
};
---

<Layout title={page.title} subTitle={page.updateHistory[0]} category={page.category} actionUrl={page.application}>
  <Metadata slot="metadata" {...page} />

  <Fragment slot="summary">
    <p>
      This dataset represents the State Judicial Districts as designated by their political boundaries. District, Juvenile and Justice courts are located in each of the state's eight judicial districts.
    </p>
  </Fragment>

  <Section title="Use the data" slot="downloads" titlePosition="center">
    <HubDownloads {...page.hub} />
  </Section>

  <Fragment slot="description">
    <p>
      This dataset contains the boundaries for Utah's Judicial Districts along with the location of the district and juvenile courts and the constituent counties. They were created by intersecting the boundaries of the state-level political districts.
    </p>
    <p>The <code>DISTRICT</code> field contains the judicial district number.</p>
  </Fragment>

  <UpdateHistory slot="update-history" updates={page.updateHistory} />

  <Section title={`More ${page.title} resources`} slot="more-resources" titlePosition="center">
    <GridForMoreResources>
      <CardWithPopularLink title="City Courts" href="https://opendata.gis.utah.gov/datasets/a111451581934197a6bd8f29a530643a_0">Municipal court boundaries</CardWithPopularLink>
      <CardWithPopularLink title="County Courts" href="https://opendata.gis.utah.gov/datasets/543ddee5e5a14bf791d6a61743534777_0">County court boundaries</CardWithPopularLink>
    </GridForMoreResources>
  </Section>

  <Section title="You might also like" slot="you-might-also-like" stripe titlePosition="center">
    <GridForYouMightLike>
      <CardWithSmallLink title="Utah State Courts" href="https://www.utcourts.gov">The Judicial Branch of Utah</CardWithSmallLink>
      <CardWithSmallLink title="Judicial Links" href="https://www.utah.gov/government/judicial.html">Judicial-related links on utah.gov</CardWithSmallLink>
    </GridForYouMightLike>
  </Section>
</Layout>
