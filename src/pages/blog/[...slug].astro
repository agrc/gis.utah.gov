---
import BlogPost from '@layouts/BlogPost.astro';
import Layout from '@layouts/FullWidth.astro';
import { getBlogPosts, type DecoratedBlogEntry } from '@utils/collections';

export async function getStaticPaths() {
  return (await getBlogPosts()).map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props as DecoratedBlogEntry;
const { Content } = await post.render();
---

<Layout title="From the blog">
  <BlogPost {...post.data}>
    <Content />
  </BlogPost>
</Layout>
