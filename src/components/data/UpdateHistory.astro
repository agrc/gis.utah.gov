---
interface Props {
  updates: string[];
  style?: 'primary' | 'secondary';
}

const { updates, style = 'primary' } = Astro.props;
---

<details
  class:list={[
    'rounded-lg border border-zinc-400 bg-primary px-6 py-3 text-white dark:border-white/20 [&_summary_svg]:open:-rotate-180',
    style === 'secondary' && 'dark:bg-secondary',
  ]}
>
  <summary class="flex cursor-pointer list-none items-center transition-all [&::-webkit-details-marker]:hidden">
    <span class="font-semibold">Update history</span>
    <div class="flex flex-1 justify-end">
      <svg
        class="flex rotate-0 transform text-white transition-all duration-300"
        fill="none"
        height="20"
        width="20"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </div>
  </summary>
  <div class="pt-4">
    <ul>
      {updates.map((update) => <li set:html={update} />)}
    </ul>
  </div>
</details>
