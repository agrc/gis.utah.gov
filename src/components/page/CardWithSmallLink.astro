---
interface Props {
  title: string;
  href: string;
  class?: string;
}

const { title, href, class: className } = Astro.props;
---

<a href={href} class:list={['you-might-like h-24 rounded-lg bg-primary px-6 py-3 text-white', className]}>
  <div class="flex">
    <h6 class="grow uppercase">{title}</h6>
    <span class="ml-2 text-2xl">&#x2192;</span>
  </div>
  <p class="line-clamp-2 text-sm opacity-70"><slot /></p>
</a>
