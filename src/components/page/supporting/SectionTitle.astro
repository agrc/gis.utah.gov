---
interface Props {
  title?: string;
  subTitle?: string;
}
const { title, subTitle } = Astro.props;
---

<div class="mx-auto max-w-prose px-8 pb-6 text-center md:max-w-screen-lg">
  <h1 class="text-2xl font-bold md:text-3xl">{title}</h1>
  {subTitle && <p class="mt-2 text-xs uppercase text-primary dark:text-accent">Last updated {subTitle}</p>}
  <slot name="quick-links" />
</div>
