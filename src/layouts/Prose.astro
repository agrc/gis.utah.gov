---
import Layout from './Chrome.astro';

interface Props {
  title: string;
}

const { title = 'UGRC' } = Astro.props;
---

<Layout title={title}>
  <main
    id="main"
    class="self-center px-6 py-24 pt-6 text-zinc-700 md:px-24 lg:px-32 dark:bg-primary dark:text-zinc-300"
  >
    <section class="flex max-w-prose flex-1 flex-col gap-4">
      <slot />
    </section>
  </main>
</Layout>
