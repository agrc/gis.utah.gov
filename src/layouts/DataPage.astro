---
import Section from '@components/page/Section.astro';
import Layout from '@layouts/FullWidth.astro';

interface Props {
  title: string;
  subTitle?: string;
  category?: string;
  downloadSectionTitle?: string;
}

const { title = 'UGRC', subTitle, downloadSectionTitle = 'Use the data', category = '' } = Astro.props;
---

<Layout title={category}>
  <Section title={title} subTitle={subTitle} stripe titlePosition="center">
    <slot name="metadata" />
    <slot name="summary" />
    <slot name="application-link" />
    <slot name="description" />
    <slot name="update-history" />
    <slot name="disclaimer" />
  </Section>
  <Section title={downloadSectionTitle} titlePosition="center">
    <slot name="downloads" />
  </Section>
  <slot name="more-resources" />
  <slot name="you-might-also-like" />
</Layout>
