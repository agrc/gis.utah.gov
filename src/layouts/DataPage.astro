---
import Section from '@components/page/Section.astro';
import Layout from '@layouts/FullWidth.astro';

interface Props {
  title: string;
  subTitle?: string;
  category: string;
  actionUrl?: string;
  config?: {
    skipInDepth?: boolean;
  };
}

const { title = 'UGRC', subTitle, category, actionUrl, config } = Astro.props;
---

<Layout title={`SGID ${category.replaceAll('-', ' ').toLowerCase()}`}>
  <Section
    title={title}
    subTitle={subTitle}
    stripe
    actionText="See the data in action"
    actionUrl={actionUrl}
    titlePosition="center"
  >
    <slot name="metadata" />
    <slot name="summary" />
  </Section>
  <slot name="downloads" />

  {
    !(config?.skipInDepth ?? false) && (
      <Section title={`${title} in depth`} stripe titlePosition="center">
        <slot name="description" />
        <slot name="update-history" />
        <slot name="disclaimer" />
      </Section>
    )
  }
  <slot name="more-resources" />
  <slot name="you-might-also-like" />
</Layout>
