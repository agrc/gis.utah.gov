---
import Section from '@components/page/Section.astro';
import Layout from '@layouts/FullWidth.astro';

interface Props {
  title: string;
  subTitle?: string;
  category: string;
  actionUrl?: string | null;
}

const { title = 'UGRC', subTitle, category, actionUrl = '' } = Astro.props;
---

<Layout title={`SGID ${category}`}>
  <Section
    title={title}
    subTitle={subTitle}
    stripe
    actionText="See the data in action"
    actionUrl={actionUrl}
    titlePosition="center"
  >
    <slot name="metadata" />
    <slot name="summary" />
    <slot name="application-link" />
  </Section>
  <slot name="downloads" />
  <Section title={`${title} in depth`} stripe titlePosition="center">
    <slot name="description" />
    <slot name="update-history" />
    <slot name="disclaimer" />
  </Section>
  <slot name="more-resources" />
  <slot name="you-might-also-like" />
</Layout>
